<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{{ title }}</title>
        <meta data-hid="description" name="description" content="{{ description }}">
        <link rel="stylesheet" href="/_assets/css/slick.css"/>
        <link rel="stylesheet" href="/_assets/css/main.css"/>
    </head>
    <body data-barba="wrapper">
        <header class="header">
            <nav class="nav">
                <div class="logo-section">
                    <a href="/" class="nav_link_logo">
                        <img src="http:{{ nav.logo.fields.file.url }}" alt="logo nathalie-m" class="logo mr-medium"/>
                        <div class="logo-title">
                            <p class="p p-bold p-logo">{{ nav.titre }}</p>
                            <p class="p p-light p-logo-sub">{{ nav.sousTitre }}</p>
                        </div>
                    </a>
                </div>
                <div class="link-section">
                    <a href="{{ nav.liens.nav1.lien }}" class="a link-section__a" target="_blank">{{ nav.liens.nav1.text }}</a>
                    <a href="{{ nav.liens.nav2.lien }}" class="a link-section__a" target="_blank">{{ nav.liens.nav2.text }}</a>
                    <a href="{{ nav.liens.nav3.lien }}" class="a link-section__a">{{ nav.liens.nav3.text }}</a>
                </div>
            </nav>

            <section class="hero">
                <div class="hero__content">
                    <h1 class="h1 mb-big">{{ header.titre }}</h1>
                    <div class="p p-hero mb-big">
                        {% getHtml header.contenu %}
                    </div>
                    <div class="hero__content__btn">
                        <a href="#links" class="a a-btn a-primary mr-medium btn-decouvrir">DÃ©couvrir</a>
                        <a href="/contact" class="a a-btn a-secondary btn-contact">Contacter</a>
                    </div>
                </div>
                <div class="hero__img">
                    <img src="http:{{ header.image.fields.file.url }}" alt="{{ header.image.fields.title }}" class="mt-extra"/>
                </div>
            </section>
        </header>

        <main class="main" data-title="{{ subtitle }}" data-barba="container">
            <div class="links" id="links">
                <h2 class="change-link">{{subtitle}}</h2>
                <div class="links__nav">
                    {% for link in slugs %}
                        <a class="link-nav {% if slug === link.slug %} active {% endif %}" href="{{ link.slug }}">{{ link.title }}</a>
                    {% endfor %}
                </div>
            </div>